<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/send_line_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ivory" >

        <EditText
            android:id="@+id/send_msg_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="8"
            android:ems="10"
            style="@style/bing_edit_style"
            android:hint="@string/pingjiayixia" >
        </EditText>

        <Button
            android:id="@+id/send_msg_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/action_sec"
            android:drawableRight="@drawable/iconfont_send_xh"
            android:text="@string/send" 
            android:textSize="15sp"/>
    </LinearLayout>

</FrameLayout>